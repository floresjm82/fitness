<!DOCTYPE html>
<html>
<head>
  <title>Graduate Body Fitness</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div class="container">

  	<div class="pull-left">
      <% if user_signed_in? %>
  	    <%= link_to "Home", root_path, :class => 'navbar-link' %>
  	  <% else %>
  	    <%= link_to "Home", new_user_registration_path, :class => 'navbar-link' %>
  	  <% end %>
  	</div>

  	<div class="pull-right">

      <% if user_signed_in? %>
        <% if current_user.avatar? %>
	        image_tag(current_user.avatar.tiny.url)
        <% end %>  
        <strong><%= link_to current_user.name, user_path(current_user), :class => 'navbar-link' %>
        </strong> | <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Check Out", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
      <% else %>
	    <%= link_to "Check In", new_user_session_path, :class => 'navbar-link' %>
      <% end %>

    </div>
    

        <%= yield %>

  </div>
  
</body>

<footer>
  <div class="text-center"> 
    <div class="navbar-fixed-bottom">
      <%= link_to "Contact Us", welcome_contact_us_path %>  -  <%= link_to "About Us", welcome_about_us_path %>
    </div>
  </div>
</footer>
</html>
