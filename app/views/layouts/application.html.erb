<!DOCTYPE html>
<html>
<head>
  <title>Graudate Body Fitness</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div class="container">
  	<div class="pull-right user-info">

      <% if user_signed_in? %>
	    Signed in as: <strong><%= link_to current_user.email, user_path(current_user), :class => 'navbar-link' %>
    </strong> | <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
      <% else %>
	    <%= link_to "Check In", new_user_session_path, :class => 'navbar-link' %>
      <% end %>

    </div>
    

        <%= yield %>

  </div>
  
</body>
</html>
